  "description": "",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "nodemon src/index.ts",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts",
    "lint:format": "eslint src/**/*.ts --fix",
    "build:app": "tsc -p .",
    "build:watch": "tsc --watch",
    "prepare": "husky install",
    "migrate:make:dev": "knex migrate:make --knexfile src/database/knexfile.ts -x ts",
    "migrate:latest:dev": "knex migrate:latest --knexfile src/database/knexfile.ts",
    "migrate:rollback:dev": "knex migrate:rollback --knexfile src/database/knexfile.ts",
    "migrate:up:dev": "knex migrate:up  --knexfile src/database/knexfile.ts",
    "migrate:down:dev": "knex migrate:down  --knexfile src/database/knexfile.ts",
    "migrate:make": "knex migrate:make --knexfile src/database/knexfile.js",
    "migrate:latest": "knex migrate:latest --knexfile src/database/knexfile.js",
    "migrate:rollback": "knex migrate:rollback --knexfile src/database/knexfile.js",
    "migrate:up": "knex migrate:up --knexfile src/database/knexfile.ts",
    "migrate:down": "knex migrate:down --knexfile src/database/knexfile.js",
    "serve": "yarn ngrok http 5000"
  },
